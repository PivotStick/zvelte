{
    "name": "@pivotass/zvelte",
    "version": "0.0.4",
    "description": "Svelte like compiler for twig like syntax that outputs PHP for ssr and JS for browser",
    "type": "module",
    "module": "src/runtime/index.js",
    "main": "src/runtime/index.js",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/PivotStick/zvelte.git"
    },
    "keywords": [
        "svelte",
        "zvelte",
        "compiler",
        "php",
        "ssr",
        "csr",
        "js",
        "reactivity",
        "signals"
    ],
    "author": "Maxime DI NATALE",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/PivotStick/zvelte/issues"
    },
    "homepage": "https://github.com/PivotStick/zvelte#readme",
    "exports": {
        "./package.json": "./package.json",
        "./compiler": {
            "types": "./types/index.d.ts",
            "default": "./src/compiler/index.js"
        },
        "./parser": {
            "types": "./types/index.d.ts",
            "default": "./src/compiler/parse/index.js"
        },
        "./reactivity": {
            "types": "./types/index.d.ts",
            "default": "./src/internal/client/reactivity.js"
        }
    },
    "dependencies": {
        "code-red": "^1.0.4",
        "css-tree": "^2.3.1",
        "estree-walker": "^3.0.3",
